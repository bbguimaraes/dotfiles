defaults

auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

account        gmail
host           smtp.gmail.com
port           587

account bbgstb@gmail.com : gmail
from           bbgstb@gmail.com
user           bbgstb
passwordeval   kwallet_read_password kdewallet mutt bbgstb@gmail.com msmtp

account bbarcaro@redhat.com : gmail
from           bbarcaro@redhat.com
user           bbarcaro@redhat.com
passwordeval   kwallet_read_password kdewallet mutt bbarcaro@redhat.com msmtp
