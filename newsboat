# nextcloud
urls-source "ocnews"
ocnews-url "https://nextcloud.bbguimaraes.com"
ocnews-login "bbguimaraes"
ocnews-passwordeval "pass show bbguimaraes.com/nextcloud/news"
# browser
browser "d web lynx %u"
# reload
suppress-first-reload yes
auto-reload yes
reload-threads 8
reload-time 30
# lists
feed-sort-order unreadarticlecount-asc
# keys
bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup
macro o set browser "xdg-open %u"; open-in-browser; set browser "d web lynx %u"
# colors
color listnormal_unread default default bold
color listfocus default default reverse
color listfocus_unread black white
color info default black bold
color title default black bold
