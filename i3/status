general {
    colors = true
    interval = 5
}

order += "load"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "disk /"
order += "disk /home"
order += "disk /tmp"
order += "wireless _first_"
order += "ethernet enp0s25"
order += "battery 0"
order += "battery 1"
order += "tztime pacific"
order += "tztime eastern"
order += "tztime brazil"
order += "tztime prague"
order += "tztime utc"
order += "tztime date"

load {
    format = "%1min %5min %15min"
}

cpu_temperature 0 {
    format = "%degrees°C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp2_input"
}

cpu_temperature 1 {
    format = "%degrees°C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp3_input"
}

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet enp0s25 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery 0 {
    format = "%status %percentage %remaining"
}

battery 1 {
    format = "%status %percentage %remaining"
}

disk "/" {
    format = "/ %avail"
}

disk "/home" {
    format = "/home %avail"
}

disk "/tmp" {
    format = "/tmp %avail"
}

tztime pacific {
    format = "P: %H:%M"
    timezone = "US/Pacific"
}

tztime eastern {
    format = "E: %H:%M"
    timezone = "US/Eastern"
}

tztime brazil {
    format = "BR: %H:%M"
    timezone = "America/Sao_Paulo"
}

tztime prague {
    format = "CE: %H:%M"
    timezone = "Europe/Prague"
}

tztime utc {
    format = "%H:%M:%S"
}

tztime date {
    format = "%Y-%m-%d"
}
